https://{$DOMAIN} {
	handle_path /static/* {
		root * /srv/app/frontend/static
		file_server
		header Cache-Control "public, max-age=31536000, immutable"
	}

	handle {
		reverse_proxy matcher_service:8000 {
			header_up X-Forwarded-For {remote}
			header_up X-Forwarded-Proto {scheme}
			header_up Host {host}
		}
	}
}
